#SELECT HOUR(DATETIME),COUNT(HOUR(DATETIME)) from ANIMAL_OUTS where HOUR(DATETIME) between 0 and 23 GROUP BY HOUR(DATETIME) ORDER BY HOUR(DATETIME)

SET @hour = -1;
SELECT (@hour:= @hour+1) as HOUR ,(SELECT COUNT(*) from ANIMAL_OUTS where HOUR(DATETIME)=@hour) as COUNT
from ANIMAL_OUTS
where @hour < 23
